generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  OWNER
  STAFF
  CUSTOMER
}

model Tenant {
  id                     Int                     @id @default(autoincrement())
  name                   String
  slug                   String                  @unique
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  users                  User[]
  services               Service[]
  appointments           Appointment[]
  businessHours          BusinessHours[]
  businessDateOverrides  BusinessDateOverride[]
}

model User {
  id           Int           @id @default(autoincrement())
  email        String
  name         String?
  passwordHash String
  role         Role          @default(CUSTOMER)
  tenantId     Int
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([email, tenantId])
  @@index([tenantId])
  @@index([email])
}

model Service {
  id                Int           @id @default(autoincrement())
  name              String
  priceInCents      Int
  durationInMinutes Int
  tenantId          Int
  tenant            Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  appointments      Appointment[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([tenantId])
}

enum AppointmentStatus {
  SCHEDULED
  CANCELED
}

model Appointment {
  id            Int               @id @default(autoincrement())
  customerName  String
  customerPhone String
  serviceId     Int
  service       Service           @relation(fields: [serviceId], references: [id])
  userId        Int?
  user          User?             @relation(fields: [userId], references: [id], onDelete: SetNull)
  tenantId      Int
  tenant        Tenant            @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  startTime     DateTime
  endTime       DateTime
  status        AppointmentStatus @default(SCHEDULED)
  version       Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([tenantId, serviceId])
  @@index([tenantId, startTime, endTime])
  @@index([tenantId, userId])
  @@index([serviceId])
}

model BusinessHours {
  id        Int             @id @default(autoincrement())
  dayOfWeek Int
  openTime  String
  closeTime String
  isOff     Boolean         @default(false)
  tenantId  Int
  tenant    Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  breaks    BusinessBreak[]

  @@unique([tenantId, dayOfWeek])
  @@index([tenantId])
}

model BusinessBreak {
  id              Int           @id @default(autoincrement())
  businessHoursId Int
  businessHours   BusinessHours @relation(fields: [businessHoursId], references: [id], onDelete: Cascade)
  startTime       String
  endTime         String

  @@index([businessHoursId])
}

model BusinessDateOverride {
  id        Int      @id @default(autoincrement())
  date      String   // YYYY-MM-DD
  openTime  String?
  closeTime String?
  isOff     Boolean  @default(false)
  tenantId  Int
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, date])
  @@index([tenantId])
}
